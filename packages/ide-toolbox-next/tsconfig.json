{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2017",
    "lib": ["es2017", "dom"],
    "module": "esnext",
    "outDir": "dist",
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "declaration": true,
    "declarationDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "paths": {
      "@types": ["src/types"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/**/*.spec.ts"]
}
